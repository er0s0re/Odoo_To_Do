<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_todo_task_form" model="ir.ui.view">
            <field name="name">todo.task.form</field>
            <field name="model">todo.task</field> <field name="arch" type="xml">
                <form string="Form Tugas">
                    <header>
                        <button name="action_mark_as_done" type="object" string="Tandai Selesai" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="due_date"/>
                            </group>
                            <group>
                                <field name="priority"/>
                                <field name="is_done"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Deskripsi Detail">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_todo_task_tree" model="ir.ui.view">
            <field name="name">todo.task.tree</field>
            <field name="model">todo.task</field>
            <field name="type">list</field> <field name="arch" type="xml">
                <list string="Daftar Tugas">
                    <field name="name"/>
                    <field name="due_date"/>
                    <field name="priority"/>
                    <field name="is_done"/>
                </list>
            </field>
        </record>

        <record id="action_todo_task" model="ir.actions.act_window">
            <field name="name">Daftar Tugas</field>
            <field name="res_model">todo.task</field> <field name="view_mode">list,form</field> <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Belum ada tugas nih. Ayo buat yang baru!
                </p>
            </field>
        </record>

        <menuitem
            id="menu_todo_root"
            name="Aplikasi To-Do"
            sequence="10"/>

        <menuitem
            id="menu_todo_task_list"
            name="Daftar Tugas"
            parent="menu_todo_root"
            action="action_todo_task" sequence="10"/>

    </data>
</odoo>